<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.puhuibao.sortinandroid.MainActivity">

    <Button
        android:onClick="click"
        android:id="@+id/btn_product"
        android:text="随机产生10个数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:hint="随机数:"
        android:id="@+id/txt_number"
        android:layout_below="@id/btn_product"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <LinearLayout
        android:id="@+id/layout"
        android:layout_below="@id/txt_number"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_sort_maopao"
            android:onClick="click"
            android:text="冒泡排序"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_sort_choice"
            android:onClick="click"
            android:text="选择排序"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btn_sort_quick"
            android:onClick="click"
            android:text="快速排序"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:onClick="click"
        android:layout_marginTop="10dp"
        android:layout_below="@id/layout"
        android:id="@+id/btn_result"
        android:text="排序结果"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:hint="结果:"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:id="@+id/txt_result"
        android:layout_below="@id/btn_result"
        android:layout_width="match_parent"
        android:layout_height="25dp"/>

    <TextView
        android:id="@+id/txt_time"
        android:gravity="center"
        android:layout_below="@id/txt_result"
        android:text="用时"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
